/* 页面container 布局 */
.flex-col-container {
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    align-items: center;
}

.flex-row-between {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
}

.flex-row-nowrap {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
}

.split-line-20 {
    width: 100%;
    height: 20rpx;
    background: #F5F5F5
}

.split-line-2 {
    width: 100%;
    height: 2rpx;
    background: #F5F5F5
}



.view-banner {
    height: 236rpx;
    width: 100%;
}

.img-full {
    display: block;
    height: 100%;
    width: 100%;
}



/** BEGIN 功能列表样式 */
.view-tag {
    height: 300rpx;
    padding: 38rpx 40rpx;

}

.tag-item {
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    align-items: center;
    height: 120rpx;
    width: 320rpx;
    border-radius: 10rpx;
    margin-top: 10rpx;
}

.tag-icon {
    margin: 0rpx 30rpx 0rpx 40rpx;
    height: 72rpx;
    width: 72rpx;
}

/** END 功能列表样式 */


/** BEGIN 新闻列表样式 */
.news-title-box {
    height: 96rpx;
    line-height: 96rpx;
    padding: 0rpx 40rpx 0rpx 40rpx;

}

.news-tilte-left {
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: flex-start;
    align-self: flex-start;
    height: 100%;
    line-height: 100%;
    text-align: center;
}


.news-title-right {
    align-self: flex-end;
    height: 100%;
    line-height: auto;
    color: #999999;

}

.news-title-icon {
    height: 44rpx;
    width: 44rpx;
    vertical-align: center;
    margin-right: 20rpx;
}

.mainbox {
    display: flex;
    margin: 0 auto;
    padding: 28rpx 20rpx;
    background: #FFFFFF;
    margin-top: 20rpx;
}

.leftimgbox {
    min-width: 160rpx;
    height: 160rpx;
}

.rightbox {
    width: 75%;
    margin-left: 20rpx;
    padding-right: 20rpx;
}

.ltimg {
    width: 100%;
    height: 100%;
}

.title {
    font-size: 32rpx;
    font-family: SimHei-Regular, SimHei;
    font-weight: 400;
    margin-bottom: 16rpx;
    color: #333333;
}

.ptit {
    height: 78rpx;
    font-size: 24rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    line-height: 36rpx;
    color: #333333;
    opacity: 1;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.ptime {
    height: 26rpx;
    font-size: 24rpx;
    font-family: MicrosoftYaHeiLight;
    line-height: 24rpx;
    color: #999999;
    opacity: 0.6;
    margin-top: 10rpx;
}

/** END 新闻列表样式 */