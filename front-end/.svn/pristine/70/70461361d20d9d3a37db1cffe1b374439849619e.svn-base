/* 页面container 布局 */
.flex-col-container {
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    align-items: center;
}

.flex-row-between {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
}

.flex-row-nowrap {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
}

.split-line-20 {
    width: 100%;
    height: 20rpx;
    background: #F5F5F5
}

.split-line-2 {
    width: 100%;
    height: 2rpx;
    background: #F5F5F5
}



.view-banner {
    height: 236rpx;
    width: 100%;
}

.img-full {
    display: block;
    height: 100%;
    width: 100%;
}



/** BEGIN 功能列表样式 */
.view-tag {
    height: 300rpx;
    padding: 38rpx 40rpx;

}

.tag-item {
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    align-items: center;
    height: 120rpx;
    width: 320rpx;
    border-radius: 10rpx;
    margin-top: 10rpx;
}

.tag-icon {
    margin: 0rpx 30rpx 0rpx 40rpx;
    height: 72rpx;
    width: 72rpx;
}

/** END 功能列表样式 */


/** BEGIN 新闻列表样式 */
.news-title-box {
    height: 96rpx;
    line-height: 96rpx;
    padding: 0rpx 40rpx 0rpx 40rpx;

}

.news-tilte-left {
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: flex-start;
    align-self: flex-start;
    height: 100%;
    line-height: 100%;
    text-align: center;
}


.news-title-right {
    align-self: flex-end;
    height: 100%;
    line-height: auto;
    color: #999999;

}

.news-title-icon {
    height: 44rpx;
    width: 44rpx;
    vertical-align: center;
    margin-right: 20rpx;
}

.mainbox {
    display: flex;
    margin: 0 auto;
    padding: 28rpx 20rpx;
    background: #FFFFFF;
    margin-top: 20rpx;
}

.leftimgbox {
    min-width: 160rpx;
    height: 160rpx;
}

.rightbox {
    width: 75%;
    margin-left: 20rpx;
    padding-right: 20rpx;
}

.ltimg {
    width: 100%;
    height: 100%;
}

.title {
    font-size: 32rpx;
    font-family: SimHei-Regular, SimHei;
    font-weight: 400;
    margin-bottom: 16rpx;
    color: #333333;
}

.ptit {
    height: 78rpx;
    font-size: 24rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    line-height: 36rpx;
    color: #333333;
    opacity: 1;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.ptime {
    height: 26rpx;
    font-size: 24rpx;
    font-family: MicrosoftYaHeiLight;
    line-height: 24rpx;
    color: #999999;
    opacity: 0.6;
    margin-top: 10rpx;
}

/** END 新闻列表样式 */


/**  BEGIN 选择身份弹出样式 */
/* 遮罩层 */
.full-mask-layer {
    width: 100%;
    height: 100%;
    background: #000000;
    opacity: 0.3;
    position: fixed;
    z-index: 99990;
    top: 0;
}

.identity-box {
    width: 85%;
    margin: 0 auto;
    background: #fff;
    top: 20%;
    position: fixed;
    z-index: 99991;
    left: 0;
    right: 0;
    border-radius: 10px 10px 10px 10px;
    padding-bottom: 20px;
}

.identity-line-1 {
    font-size: 24px;
    font-family: SimHei-Regular, SimHei;
    font-weight: 400;
    color: #333333;
    padding: 25px 0 0 24px;
}

.identity-line-2 {
    font-size: 16px;
    font-family: SimHei-Regular, SimHei;
    font-weight: 400;
    color: #999999;
    padding: 9px 0 0 24px;

}

.identity-item {
    margin: 18px 20px 9px 20px;
    height: 60px;
    line-height: 60px;
    font-size: 18px;
    font-family: SimHei-Regular, SimHei;
    font-weight: 400;
    background: #EAF2FF;
    border-radius: 5px 5px 5px 5px;
    padding-left: 20px;
    color: #3384FD;
}

.margin-top-9px {
    margin-top: 9px;
}



/**  END 选择身份弹出样式 */



