
function saveSuccessPrompt() {
    return wx.showToast({
        title: '保存成功',
        icon: 'success',
        duration: 1000,
    })
}
function saveFailPrompt() {
    return wx.showToast({
        title: '保存失败',
        icon: 'error',
        duration: 1000,
    })
}
function loadingSuccessPrompt() {
    return wx.showToast({
        title: '加载成功',
        icon: 'success',
        duration: 1500,
    })
}
function loadingFailPrompt() {
    return wx.showToast({
        title: '加载失败',
        icon: 'error',
        duration: 1500,
    })
}

function authorizeFailPrompt() {
    return wx.showToast({
        title: '用户取消授权',
        icon: 'error',
        duration: 2000,
    })
}

module.exports = {
    saveSuccessPrompt: saveSuccessPrompt,
    saveFailPrompt: saveFailPrompt,
    loadingSuccessPrompt: loadingSuccessPrompt,
    loadingFailPrompt: loadingFailPrompt,
    authorizeFailPrompt: authorizeFailPrompt,
}