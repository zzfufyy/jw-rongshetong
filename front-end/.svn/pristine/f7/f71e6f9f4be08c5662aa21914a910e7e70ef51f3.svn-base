/** BEGIN 功能样式 */
.clearfloat::after {
    content: '';
    display: block;
    clear: both;
}

.float-left {
    float: left;
}

.float-right {
    float: right;
}

.mask-layer {
    width: 100%;
    height: 100%;
    background: #000000;
    opacity: 0.3;
    position: fixed;
    z-index: 99990;
    top: 0;
}

.fix-bottom-box {
    position: fixed;
    top: auto;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    background: #ffffff;
    z-index: 99991;
}


/* BEGIN常量 */
.radio-height {
    height: 24.67px;
}

.radio-size {
    width: 44rpx;
    height: 44rpx;
}

.text-28rpx {
    font-family: Source Han Sans CN-Regular;
    font-size: 28rpx;
}

/* END 常量 */
/** BEGIN 布局 */
.flex-row {
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    align-items: center;
}

.flex-row-between {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    align-items: space;
}

.flex-column {
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: flex-start;
}

/** END 布局 */

/* 分类样式 */
.subject-container {
    margin: 30rpx 40rpx 0rpx 40rpx;
    background: #ffffff;
    border-radius: 10rpx 10rpx 10rpx 10rpx;
    padding: 40rpx 30rpx 36rpx 28rpx;
    font-family: Source Han Sans CN-Regular, Source Han Sans CN;
    font-size: 32rpx;
}

.subject-line-box {
    margin-bottom: 40rpx;
}

.add-box {
    margin: 4rpx 0rpx 30rpx 0rpx;
}

.add-button {
    color: #3585FC;
    margin: 5px 0;
    font-weight: bold;
}

.split-line {
    width: 100%;
    height: 2rpx;
    background: #F5F5F5;
}

.setting-box {
    margin-top: 30rpx;
    color: #297EFE;
}

.input-box {
    margin: 0 20rpx;
    flex-grow: 1;
}

.base-setting-box-title {
    padding: 0 36rpx 0 34rpx;
    height: 100rpx;
    line-height: 100rpx;
    background: #F7F8FA;
    color: #333333;
}

.setting-line-box {
    padding: 0 20rpx 0 34rpx;
    height: 126rpx;
    line-height: 126rpx;
    color: #333333;
}

.more-setting-line-box {
    height: 108rpx;
    line-height: 108rpx;
    text-align: center;
    font-size: 36rpx;
    color: #333333;
}

.split-line-10 {
    width: 100%;
    height: 20rpx;
    background: #F5F5F5;
}
.split-line-52 {
    width: 100%;
    height: 52rpx;
    background: #F5F5F5;
}


.image-box-cancel {
    display: inline-block;
    vertical-align: center;
}

.sxbox {
    bottom: 0;
    /* height: 200px; */
    top: auto;
}

.width-33 {
    width: 33%;
    text-align: center;
}

.text-align-left {
    text-align: left;
}

.text-align-center {
    text-align: center;
}

.text-align-right {
    text-align: right;
}

.switch-size-7 {
    zoom: 0.7;
}


.setting-cancel-color {
    color: #999999;
}