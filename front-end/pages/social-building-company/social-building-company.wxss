/** search */
.search-box {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
}

.search-box-content {
    width: 682rpx;
    height: 60rpx;
    background-color: #F7F7F7;
    border-radius: 30rpx 30rpx 30rpx 30rpx;

    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
}

.search-icon{
    margin-left: 10rpx;
}

.search-input{
    margin-left: 14rpx;
    margin-right: 24rpx;
    width: 100%;
    font-size: 28rpx;
}

.split-line-2 {
    width: 100%;
    height: 2rpx;
    background-color: #E5E5E5;

}
/** item company */
.company-box{
    border-bottom: 2rpx solid #E5E5E5;
    padding: 34rpx 40rpx 32rpx 40rpx;
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    align-items: flex-start;
}

.company-name{
    font-size: 36rpx;
    font-weight: bold;
    color: #111111;
    margin-bottom: 16rpx;
}

.company-address-box{
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: flex-start;
    margin-bottom: 4rpx;
}

.icon_address{
    margin-top: 6rpx;
    width: 32rpx;
    height: 32rpx;
    margin-right: 6rpx;
}

.company-address{
    color: #666666;
    font-size: 32rpx;
}

.company-job-box{
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    align-items: center;
}

.company-job-text{
    font-size: 28rpx;
    color: #666666;
}

.company-job-list{
    font-size: 28rpx;
    color: #1976FF;
}