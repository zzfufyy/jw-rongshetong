/* tab样式 */
.tab-list-container {
    display: flex;
    padding: 46rpx 15rpx 0rpx 15rpx;
    flex-flow: row wrap;
    justify-content: space-start;
    align-items: center;
}

.tab-item {
    width: 128rpx;
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    align-items: center;
    margin: 0rpx 26rpx 50rpx 26rpx;
}

.tab-img {
    width: 90rpx;
    height: 90rpx;
    margin-bottom: 20rpx;
}

.tab-text {
    color: #707070;
    font-size: 30rpx;
}

.line-20 {
    width: 100%;
    height: 20rpx;
    background-color: #F5F5F5;
}

.line-2 {
    width: 100%;
    height: 2rpx;
    background-color: #EEEEEE;
}

/* big-tab class */
.big-tab-container{
    width: 702rpx;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    align-items: center;
    border-top: 24rpx solid #FFFFFF;
    border-bottom: 6rpx solid #FFFFFF;
    
}
.big-tab-box{
    width: 342rpx;
    height: 164rpx;
    margin-bottom: 18rpx;

    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    background-color: #EAF1FC;
}

.big-tab-text-box{
    height: 100%;
    margin-left: 20rpx;
    display: flex;
    flex-flow: column ;
    justify-content: center;
    align-items: flex-start;
}

.big-tab-text-up{
    font-weight: 600;
    font-size: 34rpx;
    margin-bottom: 10rpx;
}

.big-tab-text-down{
    font-size: 24rpx;
    color: #8B8B8B;
    
}
.big-tab-img{
    height: 164rpx;
    width: 144rpx;
}





/* news class */
.news-tab-container {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;
    align-items: center;
}

.news-tab-item {
    margin: 30rpx 0rpx 0rpx 0rpx;
    width: 64rpx;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    align-items: center;
}

.news-tab-text {
    font-size: 32rpx;
    color: #333333;
    margin-bottom: 22rpx;
}

.news-tab-line {
    width: 60rpx;
    height: 8rpx;

}

.news-tab-line-checked {
    background-color: #257CFE;
}

.news-tab-line-unchecked {
    background-color: #FFFFFF;
}


.news-container {
    width: 100%;
    height: 170rpx;
}

.news-item {
    width: 100%;
    height: 168rpx;
    width: 100%;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
}

.news-split-line {
    margin-left: 22rpx;
    width: 702rpx;
    height: 2rpx;
    background-color: #EEEEEE;

}

.news-date-box {
    width: 120rpx;
    height: 120rpx;
    background-color: #6798FA;
    margin-left: 24rpx;
    margin-right: 20rpx;

    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    align-items: center;
}

.news-date-day {
    font-size: 48rpx;
    font-weight: bold;
    color: #FFFFFF;
    margin-top: 20rpx;
}

.news-date-year-month {
    font-size: 24rpx;
    color: #FFFFFF;
    margin-bottom: 10rpx;
}

.news-title-box{
    width: 562rpx;
    height: 120rpx;
    margin-right: 24rpx;
    font-size: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space:normal;
    word-break:break-all;
    word-wrap:break-word; 
}







